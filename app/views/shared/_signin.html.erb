<%= form_tag('session', method: :post) do %>

    <h3>Войти<% if selected_ticket %> и оплатить билет<% end %></h3>

    <div class="form-group">
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Ваш логин (электронная почта)" %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Пароль (был выслан на почту)" %>
    </div>
    <div class="actions">
      <%= submit_tag 'Войти', class: "btn btn-success" %>
    </div>

<% end  %>