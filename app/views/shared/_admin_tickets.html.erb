<h1>
  Купленные/Зарезервированные сеансы
</h1>

<% p @tickets  %>
<% if @tickets.any?  %>

<table class="table">
  <tr>
    <th>
      Название квеста
    </th>
    <th>
      Начало
    </th>
    <th>
      Статус
    </th>
    <th>
      Дата покупки
    </th>
    <th>
      Покупатель
    </th>
    <th>
      Почта
    </th>
    <th>
      Телефон
    </th>
    <th>
      Дата регистрации
    </th>
  </tr>
  <% @tickets.each do |ticket| %>
      <tr>
        <td>
          <%= ticket.quest_item.name %>
        </td>
        <td>
          <%= l(ticket.dt.to_datetime, :format => "%d %B %Y %A %H:%M") %>
        </td>
        <td>
          <%= ticket.ticket_status.name %>
        </td>
        <td>
          <%= l(ticket.updated_at.to_datetime, :format => "%d %B %Y %A %H:%M:%S") %>
        </td>
        <td>
          <%= ticket.user.name %>
        </td>
        <td>
          <%= ticket.user.email %>
        </td>
        <td>
          <%= ticket.user.phone %>
        </td>
        <td>
          <%= l(ticket.user.created_at.to_datetime, :format => "%d %B %Y %A %H:%M:%S") %>
        </td>
      </tr>
  <% end %>
</table>

<% end  %>