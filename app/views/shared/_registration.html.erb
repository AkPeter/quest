<%= form_tag('users', method: :post) do %>

    <h3>Зарегистрироваться и оплатить билет</h3>

    <script type="text/javascript">
        jQuery(function($){
            $("#phone").mask("+7 (999) 999-9999");
        });
    </script>

    <div class="form-group">
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Ваше Имя" %>
    </div>
    <div class="form-group">
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "Ваша электронная почта" %>
    </div>
    <div class="form-group">
      <%= telephone_field_tag :phone, nil, type: "text", class: "form-control", id: "phone", placeholder: "Ваш телефон" %>
    </div>
    <div class="actions">
      <%= submit_tag "Зарегистрироваться", class: "btn btn-success" %>
    </div>

<% end  %>