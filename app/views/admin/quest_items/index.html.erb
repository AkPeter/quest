<h1>Имеющиеся квесты</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Продолжительность сеанса (мин)</th>
      <th>Выпуск билетов</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quest_items.each do |quest_item| %>
      <tr>
        <td><%= quest_item.name %></td>
        <td><%= quest_item.session_length %></td>
        <td><%= quest_item.quest_status.name %></td>
        <td><%= link_to 'Редактировать', edit_admin_quest_item_path(quest_item), class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Удалить',  [:admin, quest_item], method: :delete, data: { confirm: 'Прям точно ?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Создать новый квест', new_admin_quest_item_path, class: "btn btn-primary" %>
  <%= link_to 'Настроить цены на билеты', admin_price_presets_path, class: "btn btn-primary" %>
</p>

<p id="notice"><%= notice %></p>