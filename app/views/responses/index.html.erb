<div class="responses col-xs-12">
    <h2 class="content-center">
      Отзывы
    </h2>
    <div class="responses-content col-xs-12">
        <% @responses.each do |response| %>
          <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 responses-message">
            <p class="user-response-name">
              <%= response.created_at.strftime "%Y %m %d %H:%M" %> | <%= response.user.name %>
              <%  if current_user&&current_user.admin %>
                  <%= link_to 'x', [:admin, response], method: :delete, data: { confirm: 'Точно ?' }, class: "response-btn-delete" %>
              <% end %></p>
            <p class="response-content-body"><%= response.content %></p>

            <%  if current_user&&current_user.id == response.user_id %>

            <% end %>
          </div>
        <% end %>
    </div>
</div>