<div class="responses col-xs-12">
    <h2 class="content-center">
      Отзывы
    </h2>
    <div class="responses-content col-xs-12">
        <% @responses.each do |response| %>
          <div class="col-xs-4 responses-message">
            <p class="user-response-name"><%= response.created_at.strftime "%Y %m %d %H:%M" %> | <%= response.user.name %></p>
            <p class="response-content-body"><%= response.content %></p>
          </div>
        <% end %>
    </div>
</div>