<%= form_for @response do |f| %>
    <% if @response.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@response.errors.count, "ошибка") %> чёт не то:</h2>

          <ul>
            <% @response.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="field">
      <%= f.label :Квест %><br>
      <%= f.collection_select(:quest_item_id, QuestItem.all, :id, :name) %>
    </div>
    <div class="field">
      <%= f.label :Отзыв %><br>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit 'Послать! .)', class: "btn btn-success" %>
    </div>
<% end %>